@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Personal Portfolio</title>
    <link rel="stylesheet" href="@Url.Content("~/css/style.css")" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

</head>
<body>

    <!-- NAVIGATION -->
    <header class="navbar">
        <div class="logo">Erdinç Karaman</div>
        <nav>
            <a href="#home">Home</a>
            <a href="#about">About</a>
        </nav>
    </header>

    <!-- HOME SECTION -->
    <section id="home" class="hero"
             style="background-image: url('@ViewBag.AnaSayfaBg'); background-size: cover; background-position: center;">
        <div class="hero-content">
            <h1>Erdinç <span>Karaman</span></h1>
            <p>Computer Engineer</p>

            <!-- DİNAMİK SOSYAL MEDYA LİNKLERİ -->
            <div class="social-links">
                @if (ViewBag.SocialLinks != null)
                {
                    foreach (var item in (List<MyWebSite.Models.SiteContent>)ViewBag.SocialLinks)
                    {
                        <a href="@item.Value" target="_blank">
                            <i class="@item.Key"></i>
                        </a>
                    }
                }
            </div>
        </div>
    </section>

    <!-- ABOUT SECTION -->
    <section id="about" class="about" style="background-image: url('@ViewBag.HakkimdaArkaPlan');">
        <div class="about-content">
            <div class="text">
                <h2>Hakkımda</h2>
                <p>@Html.Raw(ViewBag.HakkimdaYazi)</p>
            </div>
            <div class="image-container">
                <img src="@Url.Content(ViewBag.HakkimdaBg)" alt="Profile" />
            </div>
        </div>
    </section>

    <!-- RESUME SECTION (SABİT KALDI) -->
    <section id="resume" class="resume">
        <div class="resume-grid">
            <!-- ... sabit içerik ... -->
        </div>
    </section>

</body>
</html>
