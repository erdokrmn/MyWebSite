@model MyWebSite.Models.SiteContent

@{
    ViewData["Title"] = "İçerik Düzenle";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2 class="mb-4">İçerik Düzenle</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post" class="form">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label>Sayfa (Page)</label>
        <input asp-for="Page" class="form-control" readonly />
    </div>

    <div class="form-group mb-3">
        <label>Bölüm (Section)</label>
        <input asp-for="Section" class="form-control" readonly />
    </div>

    <div class="form-group mb-3">
        <label>Başlık (Title)</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>İçerik (Content)</label>
        <textarea asp-for="Content" class="form-control" rows="4"></textarea>
    </div>

    <div class="form-group mb-3">
        <label>Mevcut Görsel</label><br />
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Model.ImagePath" alt="Mevcut Görsel" width="150" class="mb-2" />
        }
        else
        {
            <span class="text-muted">Görsel yok</span>
        }
    </div>

    <div class="form-group mb-4">
        <label>Yeni Görsel Yükle</label>
        <input type="file" name="imageFile" class="form-control" />
        <small class="form-text text-muted">İsteğe bağlı olarak yeni görsel yükleyebilirsiniz.</small>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
