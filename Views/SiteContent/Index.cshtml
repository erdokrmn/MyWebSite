@{
    ViewData["Title"] = "İçerik Yönetimi";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var iconOptions = new Dictionary<string, string>
    {
        { "fab fa-twitter", "Twitter" },
        { "fab fa-instagram", "Instagram" },
        { "fab fa-github", "GitHub" },
        { "fab fa-linkedin", "LinkedIn" },
        { "fab fa-facebook", "Facebook" },
        { "fab fa-youtube", "YouTube" },
        { "fab fa-tiktok", "TikTok" },
        { "fab fa-discord", "Discord" }
    };
}

<h2>İçerik Yönetimi</h2>

<section>
    <h3>Ana Sayfa Arka Plan</h3>
    <form asp-action="UpdateContent" method="post" enctype="multipart/form-data">
        <input type="hidden" name="Key" value="AnaSayfa_ArkaPlan" />
        <input type="hidden" name="Type" value="Image" />
        <input type="file" name="ImageFile" class="form-control" />
        <button type="submit" class="btn btn-primary mt-2">Kaydet</button>
    </form>
</section>

<hr />

<section>
    <h3>Hakkımda Arka Plan</h3>
    <form asp-action="UpdateContent" method="post" enctype="multipart/form-data">
        <input type="hidden" name="Key" value="Hakkimda_ArkaPlan" />
        <input type="hidden" name="Type" value="Image" />
        <input type="file" name="ImageFile" class="form-control" />
        <button type="submit" class="btn btn-primary mt-2">Kaydet</button>
    </form>
</section>

<hr />

<section>
    <h3>Hakkımda Yazısı</h3>
    <form asp-action="UpdateContent" method="post">
        <input type="hidden" name="Key" value="Hakkimda_Metin" />
        <input type="hidden" name="Type" value="Text" />
        <textarea name="Value" class="form-control" rows="5" placeholder="Hakkımda yazısı..."></textarea>
        <button type="submit" class="btn btn-primary mt-2">Kaydet</button>
    </form>
</section>

<hr />

<section>
    <h3>Sosyal Medya Linki Ekle</h3>
    <form asp-action="UpdateContent" method="post">
        <input type="hidden" name="Type" value="Link" />

        <label for="Key">Platform</label>
        <select name="Key" class="form-control">
            @foreach (var icon in iconOptions)
            {
                <option value="@icon.Key">@icon.Value</option>
            }
        </select>

        <label for="Value" class="mt-2">URL</label>
        <input type="text" name="Value" class="form-control mt-1" placeholder="https://..." />

        <button type="submit" class="btn btn-primary mt-2">Ekle</button>
    </form>
</section>
