@model List<MyWebSite.Models.SiteContent>

@{
    ViewData["Title"] = "İçerik Listesi";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2 class="mb-4">İçerikler</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Yeni İçerik Ekle</a>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Henüz herhangi bir içerik eklenmemiş. Yukarıdaki butonu kullanarak yeni içerik ekleyebilirsiniz.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Sayfa</th>
                <th>Bölüm (Section)</th>
                <th>Başlık</th>
                <th>İçerik</th>
                <th>Görsel</th>
                <th class="text-center">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].Page</td>
                    <td>@Model[i].Section</td>
                    <td>@Model[i].Title</td>
                    <td>@Model[i].Content?.Substring(0, Math.Min(50, Model[i].Content.Length))...</td>
                    <td>
                        @if (!string.IsNullOrEmpty(Model[i].ImagePath))
                        {
                            <img src="@Model[i].ImagePath" alt="img" width="60" />
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-sm btn-primary">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@Model[i].Id" class="btn btn-sm btn-danger" onclick="return confirm('Bu içeriği silmek istediğinize emin misiniz?');">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
